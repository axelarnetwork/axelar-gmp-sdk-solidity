    "lodash": "^4.17.21",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.0",
